<!-- Favorites Page -->
<section class="relative bg-[#0A0A0A] pt-24 pb-12 overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[100px]"></div>
    <div class="absolute bottom-0 left-1/4 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-emerald-600/10 to-teal-500/5 blur-[80px]"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div>
        <h1 class="text-3xl md:text-4xl font-black text-white mb-2">My Saved Properties</h1>
        <p class="text-gray-300">Properties you've saved for later viewing</p>
      </div>
      
      <div class="flex items-center gap-4">
        <span class="text-amber-400 font-medium">
          <%= pluralize(@favourites.total_count, 'saved property', 'saved properties') %>
        </span>
        <%= link_to properties_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl hover:shadow-lg hover:shadow-amber-500/25 transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Find More Properties
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<section class="bg-[#FAFAF9] py-12 min-h-screen">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <% if @favourites.any? %>
      <!-- Properties Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @favourites.each do |favourite| %>
          <% property = favourite.property %>
          <div class="group bg-white rounded-2xl overflow-hidden border border-gray-100 hover:shadow-xl hover:border-amber-200 transition-all duration-300">
            <!-- Property Image -->
            <div class="relative h-48 bg-gray-100 overflow-hidden">
              <% if property.images.attached? %>
                <%= image_tag property.images.first, 
                    class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500",
                    loading: "lazy" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                </div>
              <% end %>

              <!-- Top badges -->
              <div class="absolute top-3 left-3 right-3 flex items-start justify-between">
                <span class="px-2 py-1 text-xs font-bold rounded-full bg-emerald-500 text-white shadow-lg">
                  <%= property.property_type.humanize %>
                </span>
                <div class="flex gap-2">
                  <!-- Favorite button -->
                  <%= link_to [property, :favourites], method: :delete,
                      class: "p-2 rounded-full bg-white/90 backdrop-blur-sm text-red-500 hover:bg-red-50 transition-all shadow-lg",
                      data: { 
                        confirm: "Remove from favorites?",
                        turbo_method: :delete
                      } do %>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
                      <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                  <% end %>
                </div>
              </div>

              <!-- Status badge -->
              <div class="absolute bottom-3 left-3">
                <span class="px-2 py-1 text-xs font-bold rounded-full 
                  <%= property.available? ? 'bg-emerald-500 text-white' : 'bg-amber-500 text-white' %> shadow-lg">
                  <%= property.status.humanize %>
                </span>
              </div>

              <!-- Saved date -->
              <div class="absolute bottom-3 right-3">
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-black/70 text-white backdrop-blur-sm">
                  Saved <%= time_ago_in_words(favourite.created_at) %> ago
                </span>
              </div>
            </div>
            
            <!-- Property Details -->
            <div class="p-5">
              <h3 class="font-bold text-[#1A1A1A] text-lg mb-2 line-clamp-2 group-hover:text-amber-600 transition-colors">
                <%= link_to property.title, property_path(property), class: "hover:no-underline" %>
              </h3>
              
              <div class="flex items-center text-gray-500 text-sm mb-3">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
                <%= property.location_text %>
              </div>
              
              <div class="flex items-center justify-between mb-4">
                <div>
                  <p class="text-2xl font-black text-amber-600">
                    <%= property.full_price_text %>
                  </p>
                  <p class="text-xs text-gray-400">
                    <%= property.payment_frequency&.humanize %>
                  </p>
                </div>
                
                <div class="text-right">
                  <p class="text-sm font-semibold text-gray-700">
                    <%= property.landlord_name || property.user.name %>
                  </p>
                  <p class="text-xs text-gray-400">Landlord</p>
                </div>
              </div>
              
              <!-- Action buttons -->
              <div class="flex gap-3">
                <%= link_to property_path(property), 
                    class: "flex-1 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-bold py-3 px-4 rounded-xl text-center hover:shadow-lg hover:shadow-amber-500/25 transition-all" do %>
                  View Details
                <% end %>
                
                <button type="button" 
                        class="p-3 border border-gray-200 rounded-xl hover:border-amber-300 hover:bg-amber-50 transition-all"
                        onclick="shareProperty('<%= property.title %>', '<%= property_url(property) %>')">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Simple pagination info -->
      <% if @favourites.count >= 12 %>
        <div class="mt-12 text-center">
          <p class="text-gray-600">Showing recent favorites. <%= link_to "Load more...", favourites_path(page: (params[:page].to_i + 1)), class: "text-amber-600 hover:text-amber-700 font-semibold" %></p>
        </div>
      <% end %>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="w-32 h-32 bg-gradient-to-br from-amber-100 to-orange-100 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-16 h-16 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        
        <h2 class="text-3xl font-bold text-[#1A1A1A] mb-4">No Saved Properties Yet</h2>
        <p class="text-gray-600 text-lg mb-8 max-w-md mx-auto">
          Start exploring properties and save your favorites for easy access later.
        </p>
        
        <%= link_to properties_path, 
            class: "inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-bold rounded-xl hover:shadow-xl hover:shadow-amber-500/25 transition-all" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Browse Properties
        <% end %>
        
        <div class="mt-12 max-w-2xl mx-auto">
          <h3 class="text-xl font-bold text-[#1A1A1A] mb-6">Quick Tips</h3>
          <div class="grid md:grid-cols-3 gap-6 text-left">
            <div class="bg-white rounded-2xl p-6 border border-gray-100">
              <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <h4 class="font-bold text-[#1A1A1A] mb-2">Save Properties</h4>
              <p class="text-sm text-gray-600">Click the heart icon on any property to add it to your favorites.</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 border border-gray-100">
              <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-bold text-[#1A1A1A] mb-2">Compare Options</h4>
              <p class="text-sm text-gray-600">Save multiple properties to easily compare prices and features.</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 border border-gray-100">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-bold text-[#1A1A1A] mb-2">Quick Access</h4>
              <p class="text-sm text-gray-600">Return here anytime to review your saved properties.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Share Property Modal Script -->
<script>
function shareProperty(title, url) {
  if (navigator.share) {
    navigator.share({
      title: title,
      url: url
    });
  } else {
    // Fallback to copy URL
    navigator.clipboard.writeText(url).then(() => {
      alert('Property link copied to clipboard!');
    });
  }
}
</script>