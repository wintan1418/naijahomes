<div class="min-h-screen bg-gray-50">
  <!-- Profile Header -->
  <div class="bg-gradient-to-r from-green-600 to-green-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col md:flex-row items-center md:items-start space-y-4 md:space-y-0 md:space-x-6">
        <!-- Avatar -->
        <div class="relative">
          <div class="w-32 h-32 bg-white rounded-full flex items-center justify-center shadow-xl">
            <span class="text-5xl font-bold text-green-600"><%= @user.first_name.first.upcase %><%= @user.last_name.first.upcase %></span>
          </div>
          <button class="absolute bottom-0 right-0 bg-white rounded-full p-2 shadow-lg hover:bg-gray-100">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </button>
        </div>
        
        <!-- User Info -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-white mb-2"><%= @user.full_name %></h1>
          <p class="text-green-100 mb-4"><%= @user.email %></p>
          
          <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 mb-6">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-white/20 text-white backdrop-blur-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= @user.role.capitalize %>
            </span>
            
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-white/20 text-white backdrop-blur-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <%= @user.phone_number %>
            </span>
            
            <% if @user.company_name.present? %>
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-white/20 text-white backdrop-blur-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <%= @user.company_name %>
              </span>
            <% end %>
          </div>
          
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            <%= link_to edit_user_registration_path, class: "inline-flex items-center px-4 py-2 bg-white text-green-600 rounded-lg font-medium hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Profile
            <% end %>
            
            <button class="inline-flex items-center px-4 py-2 bg-white/20 text-white rounded-lg font-medium hover:bg-white/30 transition-colors backdrop-blur-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Settings
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Profile Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-500">This Month</span>
        </div>
        <h3 class="text-2xl font-bold text-gray-900">
          <% if @user.tenant? %>
            <%= @recent_enquiries.count %>
          <% else %>
            <%= @user.properties.count %>
          <% end %>
        </h3>
        <p class="text-sm text-gray-600 mt-1">
          <% if @user.tenant? %>
            Enquiries Sent
          <% else %>
            Total Properties
          <% end %>
        </p>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-500">Active</span>
        </div>
        <h3 class="text-2xl font-bold text-gray-900"><%= @saved_properties.count %></h3>
        <p class="text-sm text-gray-600 mt-1">Saved Properties</p>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-500">Status</span>
        </div>
        <h3 class="text-2xl font-bold text-gray-900">Active</h3>
        <p class="text-sm text-gray-600 mt-1">Member Since <%= @user.created_at.strftime("%b %Y") %></p>
      </div>
    </div>
    
    <% if @user.tenant? %>
      <!-- Saved Properties Section -->
      <div class="mb-12">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Saved Properties</h2>
          <%= link_to "View All", "#", class: "text-green-600 hover:text-green-700 font-medium" %>
        </div>
        
        <% if @saved_properties.any? %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% @saved_properties.each do |property| %>
              <div class="property-card group">
                <div class="relative overflow-hidden">
                  <% if property.images.attached? %>
                    <%= image_tag property.images.first, class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" %>
                  <% else %>
                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                      </svg>
                    </div>
                  <% end %>
                  <button class="absolute top-4 right-4 p-2 bg-white rounded-full shadow-lg hover:bg-gray-100">
                    <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
                
                <div class="p-4">
                  <h3 class="font-semibold text-gray-900 text-lg mb-2 line-clamp-1"><%= property.title %></h3>
                  <p class="text-green-600 font-bold text-lg mb-2"><%= property.full_price_text %></p>
                  <p class="text-gray-600 text-sm flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <%= property.location_text %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-gray-50 rounded-lg p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No saved properties yet</h3>
            <p class="text-gray-600 mb-4">Start browsing and save properties you're interested in</p>
            <%= link_to "Browse Properties", properties_path, class: "btn-primary" %>
          </div>
        <% end %>
      </div>
      
      <!-- Recent Enquiries -->
      <div>
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Recent Enquiries</h2>
          <%= link_to "View All", "#", class: "text-green-600 hover:text-green-700 font-medium" %>
        </div>
        
        <% if @recent_enquiries.any? %>
          <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="divide-y divide-gray-200">
              <% @recent_enquiries.each do |enquiry| %>
                <div class="p-6 hover:bg-gray-50 transition-colors">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900"><%= enquiry.property.title %></h4>
                      <p class="text-sm text-gray-600 mt-1"><%= truncate(enquiry.message, length: 100) %></p>
                      <div class="flex items-center space-x-4 mt-3">
                        <span class="text-xs text-gray-500">
                          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <%= enquiry.created_at.strftime("%B %d, %Y") %>
                        </span>
                        <span class="badge badge-<%= enquiry.status_color %>">
                          <%= enquiry.status.humanize %>
                        </span>
                      </div>
                    </div>
                    <%= link_to property_path(enquiry.property), class: "ml-4 text-gray-400 hover:text-gray-600" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-gray-50 rounded-lg p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No enquiries yet</h3>
            <p class="text-gray-600">Your property enquiries will appear here</p>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- My Properties (for landlords/agents) -->
      <div>
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">My Properties</h2>
          <%= link_to "Manage All", landlord_properties_path, class: "text-green-600 hover:text-green-700 font-medium" %>
        </div>
        
        <% if @my_properties.any? %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% @my_properties.each do |property| %>
              <div class="property-card">
                <div class="relative">
                  <% if property.images.attached? %>
                    <%= image_tag property.images.first, class: "w-full h-48 object-cover" %>
                  <% else %>
                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                      </svg>
                    </div>
                  <% end %>
                  <div class="absolute top-2 right-2">
                    <span class="<%= property.available? ? 'badge-success' : 'badge-warning' %>">
                      <%= property.status.capitalize %>
                    </span>
                  </div>
                </div>
                
                <div class="p-4">
                  <h3 class="font-semibold text-gray-900 text-lg mb-2"><%= property.title %></h3>
                  <p class="text-green-600 font-bold text-lg mb-2"><%= property.full_price_text %></p>
                  <p class="text-gray-600 text-sm mb-4"><%= property.location_text %></p>
                  
                  <div class="flex justify-between items-center">
                    <%= link_to "View", property_path(property), class: "text-green-600 hover:text-green-700 text-sm font-medium" %>
                    <%= link_to "Edit", edit_landlord_property_path(property), class: "text-gray-600 hover:text-gray-700 text-sm font-medium" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-gray-50 rounded-lg p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No properties yet</h3>
            <p class="text-gray-600 mb-4">Start listing your properties</p>
            <%= link_to "Add Property", new_landlord_property_path, class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>