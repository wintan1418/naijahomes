<!-- Profile Page - NaijaRent Premium -->

<!-- Profile Header -->
<section class="relative bg-[#0A0A0A] pt-24 pb-16 overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[100px]"></div>
    <div class="absolute bottom-0 left-1/4 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-emerald-600/10 to-teal-500/5 blur-[80px]"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
      <!-- Avatar -->
      <div class="relative">
        <div class="w-32 h-32 bg-gradient-to-br from-amber-500 to-orange-500 rounded-3xl flex items-center justify-center shadow-2xl shadow-amber-500/25">
          <span class="text-5xl font-black text-black"><%= @user.first_name.first.upcase %><%= @user.last_name.first.upcase %></span>
        </div>
        <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-emerald-500 rounded-full border-4 border-[#0A0A0A] flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      </div>
      
      <!-- User Info -->
      <div class="flex-1 text-center md:text-left">
        <h1 class="text-3xl md:text-4xl font-black text-white mb-2"><%= @user.full_name %></h1>
        <p class="text-white/60 mb-6"><%= @user.email %></p>
        
        <div class="flex flex-wrap items-center justify-center md:justify-start gap-3 mb-8">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-medium bg-white/10 text-white backdrop-blur-sm border border-white/10">
            <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <%= @user.role.capitalize %>
          </span>
          
          <% if @user.phone_number.present? %>
            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-medium bg-white/10 text-white backdrop-blur-sm border border-white/10">
              <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <%= @user.phone_number %>
            </span>
          <% end %>
          
          <% if @user.company_name.present? %>
            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-medium bg-white/10 text-white backdrop-blur-sm border border-white/10">
              <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <%= @user.company_name %>
            </span>
          <% end %>
        </div>
        
        <div class="flex flex-wrap gap-3 justify-center md:justify-start">
          <%= link_to edit_user_registration_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl hover:shadow-lg hover:shadow-amber-500/25 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Profile
          <% end %>
          
          <% if @user.can_manage_properties? %>
            <%= link_to landlord_root_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-white/10 border border-white/20 text-white font-semibold rounded-xl hover:bg-white/20 transition-all" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              Dashboard
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Profile Content -->
<section class="bg-[#FAFAF9] py-12">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="bg-white rounded-2xl border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="text-xs font-medium text-gray-400 uppercase tracking-wide">This Month</span>
        </div>
        <h3 class="text-3xl font-black text-[#1A1A1A]">
          <% if @user.tenant? %>
            <%= @recent_enquiries.count %>
          <% else %>
            <%= @user.properties.count %>
          <% end %>
        </h3>
        <p class="text-sm text-gray-500 mt-1">
          <% if @user.tenant? %>
            Enquiries Sent
          <% else %>
            Total Properties
          <% end %>
        </p>
      </div>
      
      <div class="bg-white rounded-2xl border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <span class="text-xs font-medium text-gray-400 uppercase tracking-wide">Active</span>
        </div>
        <h3 class="text-3xl font-black text-[#1A1A1A]"><%= @saved_properties.count %></h3>
        <p class="text-sm text-gray-500 mt-1">Saved Properties</p>
      </div>
      
      <div class="bg-white rounded-2xl border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="text-xs font-medium text-emerald-500 uppercase tracking-wide">Active</span>
        </div>
        <h3 class="text-3xl font-black text-[#1A1A1A]">Verified</h3>
        <p class="text-sm text-gray-500 mt-1">Member Since <%= @user.created_at.strftime("%b %Y") %></p>
      </div>
    </div>
    
    <% if @user.tenant? %>
      <!-- Saved Properties Section -->
      <div class="mb-12">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-black text-[#1A1A1A]">Saved Properties</h2>
        </div>
        
        <% if @saved_properties.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @saved_properties.each do |property| %>
              <%= link_to property_path(property), class: "group block" do %>
                <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                  <div class="relative h-48 bg-gray-100 overflow-hidden">
                    <% if property.images.attached? %>
                      <%= image_tag property.images.first, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                      </div>
                    <% end %>
                    <button class="absolute top-4 right-4 w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-lg" onclick="event.preventDefault(); event.stopPropagation();">
                      <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                      </svg>
                    </button>
                  </div>
                  
                  <div class="p-5">
                    <h3 class="font-bold text-[#1A1A1A] text-lg mb-2 line-clamp-1 group-hover:text-amber-600 transition-colors"><%= property.title %></h3>
                    <p class="text-xl font-black text-amber-600 mb-2"><%= property.full_price_text %></p>
                    <p class="text-gray-500 text-sm flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <%= property.location_text %>
                    </p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-2xl border border-gray-100 p-16 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[#1A1A1A] mb-2">No saved properties yet</h3>
            <p class="text-gray-500 mb-6">Start browsing and save properties you're interested in</p>
            <%= link_to properties_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl" do %>
              Browse Properties
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- Recent Enquiries -->
      <div>
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-black text-[#1A1A1A]">Recent Enquiries</h2>
        </div>
        
        <% if @recent_enquiries.any? %>
          <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
            <div class="divide-y divide-gray-100">
              <% @recent_enquiries.each do |enquiry| %>
                <%= link_to property_path(enquiry.property), class: "block p-6 hover:bg-gray-50 transition-colors" do %>
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h4 class="font-bold text-[#1A1A1A]"><%= enquiry.property.title %></h4>
                      <p class="text-sm text-gray-500 mt-1"><%= truncate(enquiry.message, length: 100) %></p>
                      <div class="flex items-center gap-4 mt-3">
                        <span class="text-xs text-gray-400">
                          <%= enquiry.created_at.strftime("%B %d, %Y") %>
                        </span>
                        <span class="px-2 py-1 text-xs font-medium rounded-full <%= enquiry.status == 'new' ? 'bg-emerald-100 text-emerald-700' : 'bg-gray-100 text-gray-600' %>">
                          <%= enquiry.status.humanize %>
                        </span>
                      </div>
                    </div>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-2xl border border-gray-100 p-16 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[#1A1A1A] mb-2">No enquiries yet</h3>
            <p class="text-gray-500">Your property enquiries will appear here</p>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- My Properties (for landlords/agents) -->
      <div>
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-black text-[#1A1A1A]">My Properties</h2>
          <%= link_to landlord_root_path, class: "text-amber-600 hover:text-amber-700 font-semibold" do %>
            Manage All â†’
          <% end %>
        </div>
        
        <% if @my_properties.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @my_properties.each do |property| %>
              <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300">
                <div class="relative h-48 bg-gray-100">
                  <% if property.images.attached? %>
                    <%= image_tag property.images.first, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                      </svg>
                    </div>
                  <% end %>
                  <div class="absolute top-4 right-4">
                    <span class="px-3 py-1 text-xs font-bold rounded-full <%= property.available? ? 'bg-emerald-500 text-white' : 'bg-amber-500 text-white' %>">
                      <%= property.status.capitalize %>
                    </span>
                  </div>
                </div>
                
                <div class="p-5">
                  <h3 class="font-bold text-[#1A1A1A] text-lg mb-2"><%= property.title %></h3>
                  <p class="text-xl font-black text-amber-600 mb-2"><%= property.full_price_text %></p>
                  <p class="text-gray-500 text-sm mb-4"><%= property.location_text %></p>
                  
                  <div class="flex justify-between items-center pt-4 border-t border-gray-100">
                    <%= link_to "View", property_path(property), class: "text-amber-600 hover:text-amber-700 text-sm font-semibold" %>
                    <%= link_to "Edit", edit_landlord_property_path(property), class: "text-gray-500 hover:text-gray-700 text-sm font-semibold" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-2xl border border-gray-100 p-16 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[#1A1A1A] mb-2">No properties yet</h3>
            <p class="text-gray-500 mb-6">Start listing your properties</p>
            <%= link_to new_landlord_property_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Property
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
