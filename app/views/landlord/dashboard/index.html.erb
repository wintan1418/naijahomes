<div class="min-h-screen bg-gray-50">
  <!-- Dashboard Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">Landlord Dashboard</h1>
        <%= link_to "Add Property", new_landlord_property_path, class: "btn-primary" %>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Properties -->
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-600">
        <div class="flex items-center">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600">Total Properties</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_properties %></p>
          </div>
          <div class="p-3 bg-green-100 rounded-full">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Available Properties -->
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-600">
        <div class="flex items-center">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600">Available</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @available_properties %></p>
          </div>
          <div class="p-3 bg-blue-100 rounded-full">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Rented Properties -->
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-600">
        <div class="flex items-center">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600">Rented</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @rented_properties %></p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-full">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Leads -->
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-purple-600">
        <div class="flex items-center">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600">Total Leads</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_leads %></p>
            <% if @new_leads > 0 %>
              <p class="text-sm text-green-600 mt-1">+<%= @new_leads %> new</p>
            <% end %>
          </div>
          <div class="p-3 bg-purple-100 rounded-full">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Leads -->
      <div class="bg-white rounded-xl shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-semibold text-gray-900">Recent Leads</h2>
          <%= link_to "View All", landlord_leads_path, class: "text-green-600 hover:text-green-700 text-sm font-medium" %>
        </div>

        <% if @recent_leads.any? %>
          <div class="space-y-4">
            <% @recent_leads.each do |lead| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <h4 class="font-medium text-gray-900"><%= lead.name %></h4>
                    <p class="text-sm text-gray-600 mt-1">For: <%= link_to lead.property.title, property_path(lead.property), class: "text-green-600 hover:underline" %></p>
                    <p class="text-sm text-gray-500 mt-1"><%= truncate(lead.message, length: 80) %></p>
                    <div class="flex items-center space-x-4 mt-2">
                      <span class="text-xs text-gray-500"><%= lead.created_at.strftime("%b %d, %Y") %></span>
                      <span class="badge badge-<%= lead.status_color %>"><%= lead.status.humanize %></span>
                    </div>
                  </div>
                  <%= link_to landlord_lead_path(lead), class: "ml-4 text-gray-400 hover:text-gray-600" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No leads yet</h3>
            <p class="mt-1 text-sm text-gray-500">Leads will appear here when people inquire about your properties.</p>
          </div>
        <% end %>
      </div>

      <!-- Monthly Leads Chart -->
      <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Lead Trends</h2>
        
        <% if @monthly_leads_data.any? %>
          <div class="relative h-64">
            <!-- Simple bar chart representation -->
            <div class="absolute inset-0 flex items-end justify-between space-x-2">
              <% max_value = @monthly_leads_data.values.max.to_f %>
              <% @monthly_leads_data.each do |date, count| %>
                <div class="flex-1 flex flex-col items-center">
                  <div class="w-full bg-green-600 rounded-t" style="height: <%= max_value > 0 ? (count / max_value * 100) : 0 %>%"></div>
                  <span class="text-xs text-gray-600 mt-2 rotate-45 origin-left"><%= date.strftime("%b") %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No data yet</h3>
            <p class="mt-1 text-sm text-gray-500">Lead trends will appear here once you receive inquiries.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Properties -->
    <div class="mt-8 bg-white rounded-xl shadow-md p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Recent Properties</h2>
        <%= link_to "Manage All", landlord_properties_path, class: "text-green-600 hover:text-green-700 text-sm font-medium" %>
      </div>

      <% if @recent_properties.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @recent_properties.each do |property| %>
            <div class="property-card">
              <div class="relative">
                <% if property.images.attached? %>
                  <%= image_tag property.images.first, class: "w-full h-48 object-cover" %>
                <% else %>
                  <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                  </div>
                <% end %>
                <div class="absolute top-2 right-2 flex space-x-2">
                  <span class="<%= property.available? ? 'badge-success' : 'badge-warning' %>">
                    <%= property.status.capitalize %>
                  </span>
                </div>
              </div>
              
              <div class="p-4">
                <h3 class="font-semibold text-gray-900 text-lg mb-2"><%= property.title %></h3>
                <p class="text-green-600 font-bold text-lg mb-2"><%= property.full_price_text %></p>
                <p class="text-gray-600 text-sm mb-3 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <%= property.location_text %>
                </p>
                
                <div class="flex justify-between items-center">
                  <%= link_to "View Details", property_path(property), class: "text-green-600 hover:text-green-700 text-sm font-medium" %>
                  <%= link_to "Edit", edit_landlord_property_path(property), class: "text-gray-600 hover:text-gray-700 text-sm font-medium" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No properties yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding your first property.</p>
          <div class="mt-6">
            <%= link_to "Add Property", new_landlord_property_path, class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>