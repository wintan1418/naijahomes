<!-- Lead Details Page -->
<section class="relative bg-[#0A0A0A] pt-24 pb-12 overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-[#008751]/10 to-emerald-600/5 blur-[100px]"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div>
        <div class="flex items-center gap-4 mb-2">
          <%= link_to landlord_leads_path, class: "text-white/60 hover:text-white transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <h1 class="text-3xl md:text-4xl font-black text-white"><%= @lead.name %></h1>
        </div>
        <p class="text-gray-300">Lead details and communication history</p>
      </div>
      
      <div class="flex items-center gap-4">
        <span class="px-3 py-1 text-sm font-medium rounded-full
          <%= case @lead.status
              when 'new_lead' then 'bg-blue-500 text-white'
              when 'contacted' then 'bg-yellow-500 text-white'
              when 'viewing_scheduled' then 'bg-purple-500 text-white'
              when 'offer_made' then 'bg-orange-500 text-white'
              when 'negotiating' then 'bg-indigo-500 text-white'
              when 'closed_won' then 'bg-green-500 text-white'
              when 'closed_lost' then 'bg-red-500 text-white'
              end %>">
          <%= @lead.status.humanize %>
        </span>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<section class="bg-[#FAFAF9] py-12 min-h-screen">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <div class="grid lg:grid-cols-3 gap-8">
      
      <!-- Left Column: Lead Details -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Lead Information -->
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
          <div class="bg-[#008751] px-6 py-4">
            <h2 class="text-xl font-bold text-white">Lead Information</h2>
          </div>
          
          <div class="p-6 space-y-6">
            <!-- Contact Details -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                <div class="text-lg font-medium text-gray-900"><%= @lead.name %></div>
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                <div class="text-lg text-gray-900">
                  <%= mail_to @lead.email, @lead.email, class: "text-[#008751] hover:underline" %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Phone</label>
                <div class="text-lg text-gray-900">
                  <%= link_to @lead.phone, "tel:#{@lead.phone}", class: "text-[#008751] hover:underline" %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Priority</label>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                  <%= case @lead.priority
                      when 'low' then 'bg-gray-100 text-gray-700'
                      when 'medium' then 'bg-blue-100 text-blue-700'
                      when 'high' then 'bg-orange-100 text-orange-700'
                      when 'urgent' then 'bg-red-100 text-red-700'
                      end %>">
                  <%= @lead.priority.humanize %>
                </span>
              </div>
            </div>
            
            <!-- Budget & Follow-up -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Budget</label>
                <div class="text-lg font-semibold text-[#008751]">
                  <% if @lead.budget.present? %>
                    ₦<%= number_with_delimiter(@lead.budget) %>
                  <% else %>
                    <span class="text-gray-500">Not specified</span>
                  <% end %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Next Follow-up</label>
                <div class="text-lg text-gray-900">
                  <% if @lead.follow_up_at.present? %>
                    <span class="<%= @lead.overdue? ? 'text-red-600 font-semibold' : 'text-gray-700' %>">
                      <%= @lead.follow_up_at.strftime("%B %d, %Y at %I:%M %p") %>
                      <% if @lead.overdue? %>
                        <span class="text-sm text-red-500">(Overdue)</span>
                      <% end %>
                    </span>
                  <% else %>
                    <span class="text-gray-500">No follow-up scheduled</span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Initial Message -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Initial Inquiry</label>
              <div class="bg-gray-50 rounded-xl p-4 text-gray-700">
                <%= simple_format(@lead.message) %>
              </div>
            </div>
            
            <!-- Lead Stats -->
            <div class="grid grid-cols-3 gap-4 pt-6 border-t border-gray-200">
              <div class="text-center">
                <div class="text-2xl font-black text-[#008751]"><%= @lead.days_old %></div>
                <div class="text-sm text-gray-500">Days Old</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-black text-[#008751]"><%= @lead.conversion_probability %>%</div>
                <div class="text-sm text-gray-500">Conversion Probability</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-black text-[#008751]">₦<%= number_with_delimiter(@lead.estimated_value) %></div>
                <div class="text-sm text-gray-500">Estimated Value</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Activity Timeline -->
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
          <div class="bg-gray-50 px-6 py-4">
            <h2 class="text-xl font-bold text-gray-900">Activity Timeline</h2>
          </div>
          
          <div class="p-6">
            <% if @lead_activities.any? %>
              <div class="space-y-4">
                <% @lead_activities.each do |activity| %>
                  <div class="flex gap-4">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                      <%= case activity.activity_type
                          when 'status_change' then 'bg-blue-100'
                          when 'note_added' then 'bg-green-100'
                          else 'bg-gray-100'
                          end %>">
                      <svg class="w-5 h-5 <%= case activity.activity_type
                          when 'status_change' then 'text-blue-600'
                          when 'note_added' then 'text-green-600'
                          else 'text-gray-600'
                          end %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <% case activity.activity_type %>
                        <% when 'status_change' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        <% when 'note_added' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        <% else %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        <% end %>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="font-medium text-gray-900"><%= activity.description %></div>
                      <div class="text-sm text-gray-500">
                        <% if activity.user %>
                          by <%= activity.user.name %> • 
                        <% end %>
                        <%= time_ago_in_words(activity.created_at) %> ago
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8 text-gray-500">
                No activity recorded yet
              </div>
            <% end %>
          </div>
        </div>

      </div>
      
      <!-- Right Column: Actions & Property Info -->
      <div class="space-y-6">
        
        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
          <div class="bg-[#008751] px-6 py-4">
            <h2 class="text-lg font-bold text-white">Quick Actions</h2>
          </div>
          
          <div class="p-6 space-y-4">
            <% if @lead.can_advance_status? %>
              <%= button_to advance_status_landlord_lead_path(@lead),
                  method: :patch,
                  class: "w-full bg-[#008751] text-white font-semibold py-3 px-4 rounded-xl hover:bg-[#007542] transition-colors",
                  data: { confirm: "Advance lead to #{@lead.next_status_in_pipeline}?" } do %>
                Advance to <%= @lead.next_status_in_pipeline.humanize %>
              <% end %>
            <% end %>
            
            <% unless @lead.closed? %>
              <%= button_to mark_as_lost_landlord_lead_path(@lead),
                  method: :patch,
                  class: "w-full bg-red-600 text-white font-semibold py-3 px-4 rounded-xl hover:bg-red-700 transition-colors",
                  data: { confirm: "Are you sure you want to mark this lead as lost?" } do %>
                Mark as Lost
              <% end %>
            <% end %>
            
            <%= link_to "mailto:#{@lead.email}",
                class: "w-full bg-blue-600 text-white font-semibold py-3 px-4 rounded-xl hover:bg-blue-700 transition-colors text-center block" do %>
              Send Email
            <% end %>
            
            <%= link_to "tel:#{@lead.phone}",
                class: "w-full bg-green-600 text-white font-semibold py-3 px-4 rounded-xl hover:bg-green-700 transition-colors text-center block" do %>
              Call Lead
            <% end %>
          </div>
        </div>
        
        <!-- Property Information -->
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
          <div class="bg-gray-50 px-6 py-4">
            <h2 class="text-lg font-bold text-gray-900">Property Details</h2>
          </div>
          
          <div class="p-6">
            <% property = @lead.property %>
            
            <!-- Property Image -->
            <% if property.images.attached? %>
              <div class="mb-4 rounded-xl overflow-hidden">
                <%= image_tag property.images.first, class: "w-full h-40 object-cover" %>
              </div>
            <% end %>
            
            <!-- Property Info -->
            <div class="space-y-3">
              <h3 class="font-bold text-gray-900 leading-tight">
                <%= link_to property.title, property_path(property), class: "hover:text-[#008751] transition-colors" %>
              </h3>
              
              <div class="text-2xl font-black text-[#008751]">
                <%= property.full_price_text %>
              </div>
              
              <div class="text-sm text-gray-600">
                <div class="flex items-center gap-1 mb-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  </svg>
                  <%= property.location_text %>
                </div>
                
                <div class="flex items-center gap-4 mt-2">
                  <span class="px-2 py-1 bg-gray-100 rounded text-xs font-medium">
                    <%= property.property_type.humanize %>
                  </span>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">
                    <%= property.status.humanize %>
                  </span>
                </div>
              </div>
              
              <div class="pt-4 border-t border-gray-200">
                <%= link_to edit_landlord_property_path(property),
                    class: "w-full bg-gray-100 text-gray-700 font-semibold py-2 px-4 rounded-xl hover:bg-gray-200 transition-colors text-center block" do %>
                  View Property Details
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>