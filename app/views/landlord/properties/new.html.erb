<!-- Add Property Page -->
<section class="relative bg-[#0A0A0A] pt-24 pb-12 overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[100px]"></div>
  </div>

  <div class="relative max-w-4xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-black text-white mb-4">Add New Property</h1>
      <p class="text-gray-300 text-lg">List your property to attract quality tenants</p>
    </div>
  </div>
</section>

<!-- Form Section -->
<section class="bg-[#FAFAF9] py-12 min-h-screen">
  <div class="max-w-4xl mx-auto px-6 lg:px-8">
    
    <%= form_with model: [:landlord, @property], local: true, multipart: true, class: "bg-white rounded-3xl border border-gray-100 overflow-hidden shadow-xl" do |form| %>
      
      <!-- Form Header -->
      <div class="bg-gradient-to-r from-amber-500 to-orange-500 px-8 py-6">
        <h2 class="text-2xl font-bold text-black">Property Details</h2>
        <p class="text-black/70 text-sm mt-1">Fill in the information below to list your property</p>
      </div>

      <div class="p-8 space-y-8">
        
        <!-- Error Messages -->
        <% if @property.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <h3 class="text-red-800 font-semibold mb-2">Please fix the following errors:</h3>
            <ul class="text-red-600 text-sm space-y-1">
              <% @property.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Basic Information -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Basic Information</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%= form.label :title, "Property Title", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.text_field :title, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "e.g., Luxury 3-Bedroom Apartment in Victoria Island" %>
            </div>

            <div>
              <%= form.label :property_type, "Property Type", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.select :property_type, 
                  options_for_select([
                    ['Self Contain', 'self_contain'],
                    ['1 Bedroom', 'one_bedroom'],
                    ['2 Bedroom', 'two_bedroom'], 
                    ['3 Bedroom', 'three_bedroom'],
                    ['Duplex', 'duplex'],
                    ['Flat', 'flat'],
                    ['Shop', 'shop'],
                    ['Office', 'office']
                  ], @property.property_type),
                  { prompt: 'Select Property Type' },
                  { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" } %>
            </div>
          </div>

          <div>
            <%= form.label :description, "Description", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "Describe your property, its features, and what makes it special..." %>
          </div>
        </div>

        <!-- Property Details -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Property Specifications</h3>
          
          <div class="grid md:grid-cols-4 gap-6">
            <div>
              <%= form.label :bedrooms, "Bedrooms", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.number_field :bedrooms, min: 0, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" %>
            </div>

            <div>
              <%= form.label :bathrooms, "Bathrooms", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.number_field :bathrooms, min: 0, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" %>
            </div>

            <div>
              <%= form.label :toilets, "Toilets", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.number_field :toilets, min: 0, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" %>
            </div>

            <div>
              <%= form.label :size, "Size (sqm)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.number_field :size, min: 0, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" %>
            </div>
          </div>
        </div>

        <!-- Pricing -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Pricing</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%= form.label :price, "Price (₦)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.number_field :price, min: 0, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "e.g., 500000" %>
            </div>

            <div>
              <%= form.label :payment_frequency, "Payment Frequency", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.select :payment_frequency,
                  options_for_select([
                    ['Monthly', 'monthly'],
                    ['Yearly', 'yearly'], 
                    ['Negotiable', 'negotiable']
                  ], @property.payment_frequency),
                  { prompt: 'Select Frequency' },
                  { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" } %>
            </div>
          </div>
        </div>

        <!-- Location -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Location</h3>
          
          <div class="grid md:grid-cols-3 gap-6">
            <div>
              <%= form.label :state, "State", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.select :state,
                  options_for_select([
                    ['Lagos', 'Lagos'], ['Abuja', 'FCT'], ['Rivers', 'Rivers'],
                    ['Ogun', 'Ogun'], ['Kano', 'Kano'], ['Oyo', 'Oyo'],
                    ['Delta', 'Delta'], ['Edo', 'Edo'], ['Kaduna', 'Kaduna']
                  ], @property.state),
                  { prompt: 'Select State' },
                  { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" } %>
            </div>

            <div>
              <%= form.label :city, "City", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.text_field :city, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "e.g., Lagos" %>
            </div>

            <div>
              <%= form.label :lga, "Local Government Area", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.text_field :lga, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "e.g., Victoria Island" %>
            </div>
          </div>

          <div>
            <%= form.label :address, "Full Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.text_area :address, rows: 2, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", placeholder: "Enter the complete address of the property" %>
          </div>
        </div>

        <!-- Property Images -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Property Images</h3>
          
          <div>
            <%= form.label :images, "Upload Images", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.file_field :images, multiple: true, accept: "image/*", class: "w-full px-4 py-3 border-2 border-dashed border-gray-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" %>
            <p class="text-sm text-gray-500 mt-2">Upload multiple images of your property. First image will be the main photo.</p>
          </div>
        </div>

        <!-- Property Status -->
        <div class="space-y-6">
          <h3 class="text-lg font-bold text-[#1A1A1A] border-b border-gray-200 pb-2">Property Status</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%= form.label :status, "Availability Status", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.select :status,
                  options_for_select([
                    ['Available', 'available'],
                    ['Rented', 'rented'],
                    ['Inactive', 'inactive']
                  ], @property.status || 'available'),
                  {},
                  { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors" } %>
            </div>

            <div class="flex items-end">
              <label class="flex items-center gap-3 cursor-pointer">
                <%= form.check_box :featured, class: "w-5 h-5 text-amber-600 border-gray-300 rounded focus:ring-amber-500" %>
                <span class="text-sm font-semibold text-gray-700">Feature this property</span>
              </label>
            </div>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex items-center gap-4 pt-6 border-t border-gray-200">
          <%= link_to landlord_properties_path, class: "px-6 py-3 border border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-colors" do %>
            Cancel
          <% end %>
          
          <%= form.submit "List Property", class: "px-8 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl hover:shadow-lg hover:shadow-amber-500/25 transition-all cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</section>