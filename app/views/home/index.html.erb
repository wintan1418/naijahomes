<!-- NaijaRent Homepage - Green White Green (Nigerian Pride Theme) -->

<!-- Hero Section with Background Slider -->
<section class="relative min-h-screen overflow-hidden">
  <!-- Background Image Slider -->
  <div class="absolute inset-0" data-controller="hero-slider">
    <!-- Slide Images -->
    <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-100" data-hero-slider-target="slide">
      <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=1920&h=1080&fit=crop" alt="Modern Nigerian Home" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0" data-hero-slider-target="slide">
      <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1920&h=1080&fit=crop" alt="Luxury Apartment" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0" data-hero-slider-target="slide">
      <img src="https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=1920&h=1080&fit=crop" alt="Beautiful Villa" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0" data-hero-slider-target="slide">
      <img src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=1920&h=1080&fit=crop" alt="Estate View" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0" data-hero-slider-target="slide">
      <img src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=1920&h=1080&fit=crop" alt="Contemporary Home" class="w-full h-full object-cover">
    </div>
    
    <!-- Overlay - Lighter gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/20"></div>
    
    <!-- Subtle Pattern Overlay -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(0,135,81,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,135,81,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <!-- Slider Indicators -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 flex gap-2" data-hero-slider-target="indicators">
    <button class="w-12 h-1 bg-white/80 rounded-full transition-all duration-300" data-hero-slider-target="indicator" data-action="click->hero-slider#goToSlide" data-index="0"></button>
    <button class="w-8 h-1 bg-white/30 rounded-full transition-all duration-300 hover:bg-white/50" data-hero-slider-target="indicator" data-action="click->hero-slider#goToSlide" data-index="1"></button>
    <button class="w-8 h-1 bg-white/30 rounded-full transition-all duration-300 hover:bg-white/50" data-hero-slider-target="indicator" data-action="click->hero-slider#goToSlide" data-index="2"></button>
    <button class="w-8 h-1 bg-white/30 rounded-full transition-all duration-300 hover:bg-white/50" data-hero-slider-target="indicator" data-action="click->hero-slider#goToSlide" data-index="3"></button>
    <button class="w-8 h-1 bg-white/30 rounded-full transition-all duration-300 hover:bg-white/50" data-hero-slider-target="indicator" data-action="click->hero-slider#goToSlide" data-index="4"></button>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center min-h-[80vh]">
      <!-- Left: Content -->
      <div class="space-y-8">
        <!-- Badge with animation -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full animate-fade-in-up" style="animation-delay: 0.1s;">
          <span class="w-2 h-2 bg-[#008751] rounded-full animate-pulse"></span>
          <span class="text-sm text-white/90 font-medium">Nigeria's Premier Rental Platform</span>
        </div>

        <!-- Headline with staggered animation -->
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-white leading-[1.1] animate-fade-in-up" style="animation-delay: 0.2s;">
          Find Your<br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#008751] to-emerald-400">Perfect Home</span><br>
          In Nigeria
        </h1>

        <!-- Subtext -->
        <p class="text-xl text-white/70 max-w-lg leading-relaxed animate-fade-in-up" style="animation-delay: 0.3s;">
          Discover premium apartments, houses, and commercial spaces across Lagos, Abuja, Port Harcourt, and beyond.
        </p>

        <!-- Stats Row -->
        <div class="flex items-center gap-8 pt-4 animate-fade-in-up" style="animation-delay: 0.4s;">
          <div class="text-center">
            <p class="text-3xl font-bold text-white">5,000<span class="text-[#008751]">+</span></p>
            <p class="text-sm text-white/50">Properties</p>
          </div>
          <div class="w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">2,500<span class="text-[#008751]">+</span></p>
            <p class="text-sm text-white/50">Happy Tenants</p>
          </div>
          <div class="w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">36<span class="text-[#008751]">+</span></p>
            <p class="text-sm text-white/50">States</p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4 animate-fade-in-up" style="animation-delay: 0.5s;">
          <%= link_to properties_path, class: "inline-flex items-center justify-center gap-3 px-8 py-4 bg-[#008751] text-white font-bold rounded-xl hover:bg-[#006B40] hover:scale-105 transition-all duration-300 group shadow-lg shadow-[#008751]/25" do %>
            <span>Browse Properties</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          <% end %>
          <% if user_signed_in? && (current_user.landlord? || current_user.agent?) %>
            <%= link_to new_property_path, class: "inline-flex items-center justify-center gap-3 px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white font-semibold rounded-xl hover:bg-white/20 transition-all duration-300" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              List Property
            <% end %>
          <% elsif !user_signed_in? %>
            <%= link_to new_user_registration_path, class: "inline-flex items-center justify-center gap-3 px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white font-semibold rounded-xl hover:bg-white/20 transition-all duration-300" do %>
              Get Started Free
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Right: Search Card -->
      <div class="relative animate-fade-in-up" style="animation-delay: 0.6s;">
        <div class="relative bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-2xl">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-[#008751]/10 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-[#008751]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-[#0D0D0D]">Quick Search</h3>
              <p class="text-sm text-gray-500">Find your next home</p>
            </div>
          </div>

          <%= form_with url: properties_path, method: :get, class: "space-y-5" do |f| %>
            <div>
              <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Location</label>
              <%= f.text_field :location, placeholder: "Lagos, Abuja, Port Harcourt...", class: "w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Property Type</label>
                <%= f.select :property_type, options_for_select([["All Types", ""], ["Apartment", "apartment"], ["House", "house"], ["Duplex", "duplex"], ["Studio", "studio"], ["Shop", "shop"], ["Office", "office"]]), {}, class: "w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all appearance-none cursor-pointer" %>
              </div>
              <div>
                <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Max Budget</label>
                <%= f.select :max_price, options_for_select([["Any", ""], ["â‚¦500K", "500000"], ["â‚¦1M", "1000000"], ["â‚¦2M", "2000000"], ["â‚¦5M", "5000000"], ["â‚¦10M+", "10000000"]]), {}, class: "w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all appearance-none cursor-pointer" %>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Bedrooms</label>
                <%= f.select :bedrooms, options_for_select([["Any", ""], ["1 Bed", "1"], ["2 Beds", "2"], ["3 Beds", "3"], ["4+ Beds", "4"]]), {}, class: "w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all appearance-none cursor-pointer" %>
              </div>
              <div>
                <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Listing Type</label>
                <%= f.select :listing_type, options_for_select([["Any", ""], ["For Rent", "rent"], ["For Sale", "sale"], ["Shortlet", "shortlet"]]), {}, class: "w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all appearance-none cursor-pointer" %>
              </div>
            </div>

            <button type="submit" class="w-full py-4 bg-[#008751] text-white font-bold rounded-xl hover:bg-[#006B40] transition-all duration-300 flex items-center justify-center gap-2 group shadow-lg shadow-[#008751]/25">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Search Properties
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-24 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/50 animate-bounce-slow">
    <span class="text-xs font-medium tracking-widest uppercase">Scroll</span>
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center pt-2">
      <div class="w-1.5 h-3 bg-white/50 rounded-full animate-scroll-down"></div>
    </div>
  </div>
</section>


