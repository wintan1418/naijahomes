<!-- Popular Locations -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Popular Locations</h2>
      <p class="text-xl text-gray-600">Explore properties in Nigeria's most sought-after areas</p>
    </div>
    
    <div class="grid md:grid-cols-4 gap-6">
      <% [
        { name: "Lagos", count: "450+ properties", image: "https://images.unsplash.com/photo-1618828665011-0abd973f7bb8?w=400" },
        { name: "Abuja", count: "320+ properties", image: "https://images.unsplash.com/photo-1568605114967-8130f3a36994?w=400" },
        { name: "Port Harcourt", count: "180+ properties", image: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=400" },
        { name: "Ibadan", count: "210+ properties", image: "https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=400" },
        { name: "Kano", count: "150+ properties", image: "https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=400" },
        { name: "Enugu", count: "120+ properties", image: "https://images.unsplash.com/photo-1568605114967-8130f3a36994?w=400" },
        { name: "Benin City", count: "95+ properties", image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=400" },
        { name: "Calabar", count: "80+ properties", image: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=400" }
      ].each do |location| %>
        <%= link_to properties_path(state: location[:name]), class: "group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300" do %>
          <div class="aspect-w-16 aspect-h-12 h-64">
            <img src="<%= location[:image] %>" alt="<%= location[:name] %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-1"><%= location[:name] %></h3>
            <p class="text-gray-200"><%= location[:count] %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section for Landlords -->
<section class="py-20 bg-gradient-to-r from-green-600 to-green-800 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold mb-6">Are You a Property Owner?</h2>
    <p class="text-xl mb-8 text-green-100">List your property and connect with thousands of potential tenants</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <% if user_signed_in? %>
        <%= link_to "List Your Property", new_property_path, class: "px-8 py-4 bg-white text-green-700 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 inline-block" %>
      <% else %>
        <%= link_to "Get Started", new_user_registration_path(role: 'landlord'), class: "px-8 py-4 bg-white text-green-700 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 inline-block" %>
      <% end %>
      <%= link_to "Learn More", "#", class: "px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-green-700 transition-all duration-300 transform hover:scale-105 inline-block" %>
    </div>
  </div>
</section>

