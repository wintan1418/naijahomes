<!-- Hero Section -->
<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-green-900/90 via-green-800/80 to-green-700/70 z-10"></div>
    <img src="https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=1920" alt="Nigerian cityscape" class="w-full h-full object-cover">
  </div>
  
  <!-- Hero Content -->
  <div class="relative z-20 text-center text-white max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in-up">
      Find Your Perfect Home<br>
      <span class="text-green-400">in Nigeria</span>
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-gray-200 animate-fade-in-up animation-delay-200">
      Discover thousands of properties across all 36 states and FCT
    </p>
    
    <!-- Search Form -->
    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-2 max-w-4xl mx-auto animate-fade-in-up animation-delay-400">
      <%= form_with url: properties_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-2" do |f| %>
        <div class="flex-1">
          <%= f.select :state, 
                      options_for_select([["Select State", ""]] + Property::NIGERIAN_STATES), 
                      {},
                      class: "w-full px-6 py-4 text-gray-900 bg-white rounded-xl focus:outline-none focus:ring-4 focus:ring-green-400 text-lg" %>
        </div>
        <div class="flex-1">
          <%= f.text_field :city, 
                          placeholder: "Enter city or area",
                          class: "w-full px-6 py-4 text-gray-900 bg-white rounded-xl focus:outline-none focus:ring-4 focus:ring-green-400 text-lg" %>
        </div>
        <%= f.submit "Search Properties", 
                    class: "px-8 py-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 cursor-pointer text-lg" %>
      <% end %>
    </div>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-8 mt-12 animate-fade-in-up animation-delay-600">
      <div class="text-center">
        <div class="text-4xl font-bold text-green-400">1,200+</div>
        <div class="text-gray-300">Active Properties</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-green-400">36</div>
        <div class="text-gray-300">States Covered</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-green-400">500+</div>
        <div class="text-gray-300">Happy Tenants</div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

