<!-- NAIJA RENT - Premium Nigerian Property Platform -->

<!-- Immersive Hero Section -->
<section class="relative min-h-screen overflow-hidden bg-[#0A0A0A]">
  <!-- Animated Gradient Mesh Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_#1a472a_0%,_transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_#8B4513_0%,_transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_#0A0A0A_0%,_transparent_100%)]"></div>
    
    <!-- Floating Orbs -->
    <div class="absolute top-1/4 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-amber-500/20 to-orange-600/10 blur-[100px] animate-drift"></div>
    <div class="absolute bottom-1/3 left-1/6 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-emerald-600/15 to-teal-500/10 blur-[80px] animate-drift-delayed"></div>
    <div class="absolute top-2/3 right-1/3 w-[300px] h-[300px] rounded-full bg-gradient-to-br from-[#D4A574]/20 to-amber-700/10 blur-[60px] animate-drift-slow"></div>
    
    <!-- Geometric Pattern Overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,<svg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"><g fill=\"none\" fill-rule=\"evenodd\"><g fill=\"%23ffffff\" fill-opacity=\"1\"><path d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/></g></g></svg>');"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 min-h-screen flex items-center">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20 w-full">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left Content -->
        <div class="space-y-8">
          <!-- Animated Badge -->
          <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm animate-fade-in">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
            </span>
            <span class="text-sm text-white/80 font-medium tracking-wide">Nigeria's Premier Property Platform</span>
          </div>

          <!-- Main Headline -->
          <h1 class="animate-fade-in-up">
            <span class="block text-5xl sm:text-6xl lg:text-7xl font-black text-white leading-[0.9] tracking-tight">
              Find Your
            </span>
            <span class="block text-5xl sm:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight mt-2 bg-gradient-to-r from-amber-400 via-orange-400 to-amber-500 bg-clip-text text-transparent">
              Perfect Space
            </span>
            <span class="block text-5xl sm:text-6xl lg:text-7xl font-black text-white leading-[0.9] tracking-tight mt-2">
              in Nigeria
            </span>
          </h1>

          <!-- Subtitle -->
          <p class="text-lg sm:text-xl text-white/60 max-w-xl leading-relaxed animate-fade-in-up animation-delay-200">
            From luxury apartments in Victoria Island to cozy homes in Wuse, discover verified properties across all 36 states.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up animation-delay-400">
            <%= link_to properties_path, class: "group relative inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-2xl overflow-hidden transition-all duration-300 hover:scale-[1.02] hover:shadow-[0_0_40px_rgba(251,191,36,0.3)]" do %>
              <span class="relative z-10">Explore Properties</span>
              <svg class="w-5 h-5 relative z-10 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
              <div class="absolute inset-0 bg-gradient-to-r from-amber-400 to-yellow-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <% end %>

            <% if user_signed_in? && current_user.can_manage_properties? %>
              <%= link_to new_property_path, class: "group inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/5 border border-white/20 text-white font-semibold rounded-2xl backdrop-blur-sm hover:bg-white/10 hover:border-white/30 transition-all duration-300" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span>List Property</span>
              <% end %>
            <% else %>
              <%= link_to new_user_registration_path, class: "group inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/5 border border-white/20 text-white font-semibold rounded-2xl backdrop-blur-sm hover:bg-white/10 hover:border-white/30 transition-all duration-300" do %>
                <span>Become a Landlord</span>
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
            <% end %>
          </div>

          <!-- Trust Indicators -->
          <div class="flex items-center gap-8 pt-4 animate-fade-in-up animation-delay-600">
            <div class="flex -space-x-3">
              <% 4.times do |i| %>
                <div class="w-10 h-10 rounded-full border-2 border-[#0A0A0A] bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-xs font-bold text-black">
                  <%= ['C', 'A', 'O', 'M'][i] %>
                </div>
              <% end %>
              <div class="w-10 h-10 rounded-full border-2 border-[#0A0A0A] bg-white/10 backdrop-blur-sm flex items-center justify-center text-xs font-medium text-white">
                +<%= User.count > 99 ? '99' : User.count %>
              </div>
            </div>
            <div class="text-sm">
              <span class="text-white font-semibold"><%= User.count.to_s.gsub(/(\d)(?=(\d\d\d)+(?!\d))/, '\1,') %>+</span>
              <span class="text-white/50"> happy users</span>
            </div>
          </div>
        </div>

        <!-- Right Side - Search Card -->
        <div class="relative animate-fade-in-up animation-delay-300">
          <!-- Glow Effect -->
          <div class="absolute -inset-4 bg-gradient-to-r from-amber-500/20 via-orange-500/20 to-emerald-500/20 rounded-[2.5rem] blur-2xl opacity-60"></div>
          
          <!-- Search Card -->
          <div class="relative bg-white/[0.03] backdrop-blur-xl rounded-[2rem] border border-white/10 p-8 space-y-6">
            <!-- Card Header -->
            <div class="flex items-center justify-between">
              <h2 class="text-xl font-bold text-white">Find Your Home</h2>
              <div class="flex gap-1">
                <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
                <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                <div class="w-2 h-2 rounded-full bg-orange-500"></div>
              </div>
            </div>

            <%= form_with url: properties_path, method: :get, local: true, class: "space-y-5" do |f| %>
              <!-- Property Type Tabs -->
              <div class="grid grid-cols-3 gap-2 p-1 bg-white/5 rounded-xl">
                <button type="button" class="search-tab active px-4 py-2.5 rounded-lg text-sm font-medium transition-all" data-type="rent">
                  Rent
                </button>
                <button type="button" class="search-tab px-4 py-2.5 rounded-lg text-sm font-medium transition-all" data-type="buy">
                  Buy
                </button>
                <button type="button" class="search-tab px-4 py-2.5 rounded-lg text-sm font-medium transition-all" data-type="shortlet">
                  Shortlet
                </button>
              </div>

              <!-- Location Input -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-white/70">Location</label>
                <div class="relative">
                  <div class="absolute left-4 top-1/2 -translate-y-1/2">
                    <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <%= f.select :state,
                      options_for_select([["Select State", ""]] + Property::NIGERIAN_STATES),
                      {},
                      class: "w-full pl-12 pr-4 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all appearance-none cursor-pointer" %>
                </div>
              </div>

              <!-- City Input -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-white/70">City or Area</label>
                <div class="relative">
                  <div class="absolute left-4 top-1/2 -translate-y-1/2">
                    <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                  </div>
                  <%= f.text_field :city,
                      placeholder: "e.g., Lekki, Wuse, GRA",
                      class: "w-full pl-12 pr-4 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all" %>
                </div>
              </div>

              <!-- Price Range -->
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <label class="text-sm font-medium text-white/70">Min Price</label>
                  <%= f.select :min_price,
                      options_for_select([["Any", ""], ["â‚¦50,000", 50000], ["â‚¦100,000", 100000], ["â‚¦200,000", 200000], ["â‚¦500,000", 500000], ["â‚¦1,000,000", 1000000]]),
                      {},
                      class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:border-amber-500/50 transition-all appearance-none cursor-pointer text-sm" %>
                </div>
                <div class="space-y-2">
                  <label class="text-sm font-medium text-white/70">Max Price</label>
                  <%= f.select :max_price,
                      options_for_select([["Any", ""], ["â‚¦100,000", 100000], ["â‚¦300,000", 300000], ["â‚¦500,000", 500000], ["â‚¦1,000,000", 1000000], ["â‚¦5,000,000", 5000000]]),
                      {},
                      class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:border-amber-500/50 transition-all appearance-none cursor-pointer text-sm" %>
                </div>
              </div>

              <!-- Search Button -->
              <%= f.submit "Search Properties",
                  class: "w-full py-4 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-black font-bold rounded-xl transition-all duration-300 hover:shadow-[0_0_30px_rgba(251,191,36,0.4)] cursor-pointer" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 rounded-full border-2 border-white/20 flex justify-center pt-2">
      <div class="w-1 h-2 bg-white/50 rounded-full animate-pulse"></div>
    </div>
  </div>
</section>

<!-- Stats Bar -->
<section class="relative bg-[#0A0A0A] border-y border-white/5">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="text-center group">
        <div class="text-4xl md:text-5xl font-black text-white mb-2 transition-transform group-hover:scale-110">
