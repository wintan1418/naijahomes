<!-- Hero Section -->
<section class="relative min-h-screen bg-[#0D0D0D] overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(0,135,81,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,135,81,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
