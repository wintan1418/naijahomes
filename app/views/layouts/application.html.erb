    <!-- Navbar & Dropdown Scripts -->
    <script>
      function initNavbar() {
        const navbar = document.querySelector('nav');
        const logo = document.querySelector('[data-navbar-target="logo"]');
        const links = document.querySelectorAll('[data-navbar-target="link"]');
        const userBtn = document.querySelector('.user-dropdown-btn');
        
        if (!navbar) return;
        
        function updateNavbar() {
          const isHome = window.location.pathname === '/' || window.location.pathname === '';
          const scrolled = window.scrollY > 50;
          
          if (isHome && !scrolled) {
            navbar.classList.remove('bg-white', 'shadow-lg');
            navbar.classList.add('bg-transparent');
            if (logo) logo.classList.remove('!text-[#1A1A1A]');
            if (userBtn) userBtn.classList.remove('!bg-gray-100', '!text-[#1A1A1A]');
            links.forEach(l => l.classList.remove('!text-gray-600'));
          } else {
            navbar.classList.add('bg-white', 'shadow-lg');
            navbar.classList.remove('bg-transparent');
            if (logo) logo.classList.add('!text-[#1A1A1A]');
            if (userBtn) userBtn.classList.add('!bg-gray-100', '!text-[#1A1A1A]');
            links.forEach(l => l.classList.add('!text-gray-600'));
          }
        }
        
        updateNavbar();
        window.removeEventListener('scroll', updateNavbar);
        window.addEventListener('scroll', updateNavbar);
      }

      function initDropdowns() {
        document.querySelectorAll('[data-controller="dropdown"]').forEach(dropdown => {
          const button = dropdown.querySelector('[data-action="click->dropdown#toggle"]');
          const menu = dropdown.querySelector('[data-dropdown-target="menu"]');
          
          if (button && menu) {
            // Remove old listeners by cloning
            const newButton = button.cloneNode(true);
            button.parentNode.replaceChild(newButton, button);
            
            newButton.addEventListener('click', (e) => {
              e.preventDefault();
              e.stopPropagation();
              menu.classList.toggle('hidden');
            });
          }
        });
        
        // Close dropdowns when clicking outside
        document.removeEventListener('click', closeDropdowns);
        document.addEventListener('click', closeDropdowns);
      }
      
      function closeDropdowns(e) {
        document.querySelectorAll('[data-dropdown-target="menu"]').forEach(menu => {
          if (!menu.closest('[data-controller="dropdown"]').contains(e.target)) {
            menu.classList.add('hidden');
          }
        });
      }

      // Initialize on page load and Turbo navigation
      document.addEventListener('DOMContentLoaded', () => {
        initNavbar();
        initDropdowns();
      });
      
      document.addEventListener('turbo:load', () => {
        initNavbar();
        initDropdowns();
      });
      
      document.addEventListener('turbo:render', () => {
        initNavbar();
        initDropdowns();
      });
    </script>
