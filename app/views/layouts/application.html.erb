                    </svg>
                    Settings
                  <% end %>

                  <div class="border-t border-gray-100 mt-2 pt-2">
                    <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center gap-3 w-full px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                      </svg>
                      Sign out
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <!-- Auth Buttons -->
              <%= link_to new_user_session_path, class: "hidden sm:flex items-center px-4 py-2 font-medium text-slate-600 hover:text-slate-900 transition-colors duration-200" do %>
                Sign in
              <% end %>
              <%= link_to new_user_registration_path, class: "flex items-center gap-2 px-6 py-2.5 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 transition-all duration-200" do %>
                <span class="hidden sm:inline">Get Started</span>
                <span class="sm:hidden">Join</span>
              <% end %>
            <% end %>

            <!-- Mobile Menu Button -->
            <button class="lg:hidden w-10 h-10 rounded-xl nav-btn flex items-center justify-center transition-all duration-200" id="mobile-menu-btn">
              <svg class="w-5 h-5 nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="lg:hidden hidden bg-white border-t border-gray-100 shadow-xl" id="mobile-menu">
        <div class="px-6 py-4 space-y-2">
          <%= link_to "Browse Properties", properties_path, class: "block px-4 py-3 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition-colors" %>
          <%= link_to "Luxury Homes", properties_path(property_type: 'duplex'), class: "block px-4 py-3 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition-colors" %>
          <% if user_signed_in? && current_user.can_manage_properties? %>
            <%= link_to "Dashboard", landlord_root_path, class: "block px-4 py-3 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition-colors" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="fixed top-24 right-6 z-50 animate-slide-up" id="notice-flash">
        <div class="flex items-center gap-3 px-5 py-4 bg-emerald-500 text-white rounded-2xl shadow-xl shadow-emerald-500/25">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium"><%= notice %></span>
          <button onclick="this.parentElement.parentElement.remove()" class="ml-2 hover:opacity-80">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
