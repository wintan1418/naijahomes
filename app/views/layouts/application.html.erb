            <%= link_to "About", "#", class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Contact", "#", class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            
            <% if user_signed_in? %>
              <% if current_user.can_manage_properties? %>
                <div class="h-6 w-px bg-gray-300"></div>
                <%= link_to landlord_root_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors flex items-center" do %>
