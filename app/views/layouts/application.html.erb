            <%= link_to "Properties", properties_path, class: "text-sm font-medium text-white/80 hover:text-white transition-colors", data: { navbar_target: "link" } %>
            <%= link_to "For Rent", properties_path(listing_type: "rent"), class: "text-sm font-medium text-white/80 hover:text-white transition-colors", data: { navbar_target: "link" } %>
            <%= link_to "For Sale", properties_path(listing_type: "sale"), class: "text-sm font-medium text-white/80 hover:text-white transition-colors", data: { navbar_target: "link" } %>
            <%= link_to "Shortlet", properties_path(listing_type: "shortlet"), class: "text-sm font-medium text-white/80 hover:text-white transition-colors", data: { navbar_target: "link" } %>
