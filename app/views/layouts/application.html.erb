    <script>
      // Navigation scroll effect
      const nav = document.getElementById('main-nav');
      let lastScroll = 0;

      // Check if we're on the homepage (has dark hero)
      const isHomePage = document.querySelector('section.bg-\\[\\#0A0A0A\\]') !== null;

      function updateNav() {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll > 100) {
          nav.classList.add('bg-white', 'shadow-lg', 'shadow-black/5');
          nav.classList.remove('bg-transparent');
          // Update text colors for light nav
          document.querySelectorAll('.nav-text').forEach(el => {
            el.classList.remove('text-white');
            el.classList.add('text-gray-900');
          });
          document.querySelectorAll('.nav-subtext').forEach(el => {
            el.classList.remove('text-white');
            el.classList.add('text-gray-500');
          });
          document.querySelectorAll('.nav-item').forEach(el => {
            el.classList.remove('text-white/80', 'hover:text-white', 'hover:bg-white/10');
            el.classList.add('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
          });
          document.querySelectorAll('.nav-btn').forEach(el => {
            el.classList.remove('bg-white/10', 'hover:bg-white/20');
            el.classList.add('bg-gray-100', 'hover:bg-gray-200');
          });
          document.querySelectorAll('.nav-icon').forEach(el => {
            el.classList.remove('text-white');
            el.classList.add('text-gray-600');
          });
        } else {
          nav.classList.remove('bg-white', 'shadow-lg', 'shadow-black/5');
          nav.classList.add('bg-transparent');
          
          if (isHomePage) {
            // Dark text on transparent nav for homepage
            document.querySelectorAll('.nav-text').forEach(el => {
              el.classList.add('text-white');
              el.classList.remove('text-gray-900');
            });
            document.querySelectorAll('.nav-subtext').forEach(el => {
              el.classList.add('text-white');
              el.classList.remove('text-gray-500');
            });
            document.querySelectorAll('.nav-item').forEach(el => {
              el.classList.add('text-white/80', 'hover:text-white', 'hover:bg-white/10');
              el.classList.remove('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
            });
            document.querySelectorAll('.nav-btn').forEach(el => {
              el.classList.add('bg-white/10', 'hover:bg-white/20');
              el.classList.remove('bg-gray-100', 'hover:bg-gray-200');
            });
            document.querySelectorAll('.nav-icon').forEach(el => {
              el.classList.add('text-white');
              el.classList.remove('text-gray-600');
            });
          }
        }

        lastScroll = currentScroll;
      }

      // Initialize on load
      if (isHomePage) {
        document.querySelectorAll('.nav-text').forEach(el => el.classList.add('text-white'));
        document.querySelectorAll('.nav-subtext').forEach(el => el.classList.add('text-white'));
        document.querySelectorAll('.nav-item').forEach(el => {
          el.classList.add('text-white/80', 'hover:text-white', 'hover:bg-white/10');
        });
        document.querySelectorAll('.nav-btn').forEach(el => {
          el.classList.add('bg-white/10', 'hover:bg-white/20');
        });
        document.querySelectorAll('.nav-icon').forEach(el => el.classList.add('text-white'));
      } else {
        nav.classList.add('bg-white', 'shadow-lg', 'shadow-black/5');
        document.querySelectorAll('.nav-text').forEach(el => el.classList.add('text-gray-900'));
        document.querySelectorAll('.nav-subtext').forEach(el => el.classList.add('text-gray-500'));
        document.querySelectorAll('.nav-item').forEach(el => {
          el.classList.add('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
        });
        document.querySelectorAll('.nav-btn').forEach(el => {
          el.classList.add('bg-gray-100', 'hover:bg-gray-200');
        });
        document.querySelectorAll('.nav-icon').forEach(el => el.classList.add('text-gray-600'));
      }

      window.addEventListener('scroll', updateNav, { passive: true });

      // Mobile menu toggle
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Auto-hide flash messages
      setTimeout(() => {
        const notices = document.querySelectorAll('#notice-flash, #alert-flash');
        notices.forEach(notice => {
          notice.style.opacity = '0';
          notice.style.transform = 'translateX(100%)';
          setTimeout(() => notice.remove(), 300);
        });
      }, 5000);
    </script>
  </body>
</html>
