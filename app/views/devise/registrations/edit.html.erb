<!-- Account Settings - NaijaRent Premium -->

<!-- Header -->
<section class="relative bg-[#0A0A0A] pt-24 pb-12">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[100px]"></div>
  </div>

  <div class="relative max-w-3xl mx-auto px-6 lg:px-8">
    <div class="flex items-center gap-4 mb-6">
      <%= link_to profile_path, class: "w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-white/20 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl md:text-3xl font-black text-white">Account Settings</h1>
        <p class="text-white/60">Manage your profile and security</p>
      </div>
    </div>
  </div>
</section>

<!-- Settings Content -->
<section class="bg-[#FAFAF9] py-12">
  <div class="max-w-3xl mx-auto px-6 lg:px-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-8" }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-2xl p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-red-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-red-800 mb-2">There were <%= resource.errors.count %> errors</h3>
              <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Profile Information -->
      <div class="bg-white rounded-2xl border border-gray-100 p-8">
        <div class="flex items-center gap-4 mb-8">
          <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/25">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-[#1A1A1A]">Profile Information</h2>
            <p class="text-sm text-gray-500">Update your account details</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">First Name</label>
            <%= f.text_field :first_name, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all" %>
          </div>

          <div>
            <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Last Name</label>
            <%= f.text_field :last_name, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all" %>
          </div>

          <div>
            <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Phone Number</label>
            <%= f.text_field :phone_number, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all", placeholder: "+234 803 123 4567" %>
          </div>

          <div>
            <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">WhatsApp (Optional)</label>
            <%= f.text_field :whatsapp_number, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all", placeholder: "+234 803 123 4567" %>
          </div>

          <% if current_user.agent? %>
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Company Name</label>
              <%= f.text_field :company_name, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Email Settings -->
      <div class="bg-white rounded-2xl border border-gray-100 p-8">
        <div class="flex items-center gap-4 mb-8">
          <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/25">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-[#1A1A1A]">Email Settings</h2>
            <p class="text-sm text-gray-500">Manage your email preferences</p>
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Email Address</label>
          <%= f.email_field :email, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-sm text-amber-600 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Waiting confirmation for: <%= resource.unconfirmed_email %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Security Settings -->
      <div class="bg-white rounded-2xl border border-gray-100 p-8">
        <div class="flex items-center gap-4 mb-8">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center shadow-lg shadow-purple-500/25">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-bold text-[#1A1A1A]">Security</h2>
            <p class="text-sm text-gray-500">Update your password</p>
          </div>
        </div>

        <div class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Current Password</label>
            <%= f.password_field :current_password, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all", placeholder: "Required to save changes" %>
            <p class="mt-1 text-xs text-gray-400">Required to save any changes</p>
          </div>

          <div class="border-t border-gray-100 pt-6">
            <h3 class="text-sm font-bold text-[#1A1A1A] mb-4">Change Password</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">New Password</label>
                <%= f.password_field :password, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all", placeholder: "Leave blank to keep current" %>
                <% if @minimum_password_length %>
                  <p class="mt-1 text-xs text-gray-400">Minimum <%= @minimum_password_length %> characters</p>
                <% end %>
              </div>

              <div>
                <label class="block text-sm font-semibold text-[#1A1A1A] mb-2">Confirm Password</label>
                <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all", placeholder: "Confirm new password" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-end">
        <%= link_to profile_path, class: "px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-all text-center" do %>
          Cancel
        <% end %>
        <%= f.submit "Save Changes", class: "px-8 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-black font-bold rounded-xl hover:shadow-lg hover:shadow-amber-500/25 transition-all cursor-pointer" %>
      </div>
    <% end %>

    <!-- Danger Zone -->
    <div class="mt-12 bg-red-50 border border-red-200 rounded-2xl p-8">
      <div class="flex items-center gap-4 mb-6">
        <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-bold text-red-800">Danger Zone</h2>
          <p class="text-sm text-red-600">Irreversible actions</p>
        </div>
      </div>
      
      <p class="text-sm text-red-700 mb-6">
        Once you delete your account, there is no going back. All your data will be permanently deleted.
      </p>
      
      <%= button_to "Delete Account", registration_path(resource_name), 
          data: { 
            confirm: "Are you absolutely sure? This action cannot be undone.", 
            turbo_confirm: "Are you absolutely sure? This action cannot be undone." 
          }, 
          method: :delete,
          class: "px-6 py-3 bg-red-600 text-white font-bold rounded-xl hover:bg-red-700 transition-colors" %>
    </div>
  </div>
</section>
