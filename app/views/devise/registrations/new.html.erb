<!-- Sign Up Page - NaijaRent Premium -->
<div class="min-h-screen bg-[#0A0A0A] flex relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-1/3 left-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-emerald-500/10 to-teal-600/5 blur-[100px]"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[80px]"></div>
  </div>

  <!-- Left Side - Branding (Hidden on mobile) -->
  <div class="hidden lg:flex lg:w-1/2 relative items-center justify-center p-12">
    <div class="relative z-10 max-w-lg">
      <!-- Logo -->
      <div class="flex items-center gap-3 mb-12">
        <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/25">
          <span class="text-black font-black text-2xl">N</span>
        </div>
        <span class="font-bold text-2xl text-white">NaijaRent</span>
      </div>

      <h1 class="text-5xl font-black text-white leading-tight mb-6">
        Join the largest
        <span class="bg-gradient-to-r from-emerald-400 to-teal-500 bg-clip-text text-transparent">property community</span>
        in Nigeria
      </h1>
      
      <p class="text-xl text-white/60 mb-12 leading-relaxed">
        Whether you're looking for your dream home or want to list your properties, NaijaRent is your trusted partner.
      </p>

      <!-- Features -->
      <div class="space-y-4">
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 bg-emerald-500/20 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="text-white/70">Verified property listings</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 bg-amber-500/20 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <span class="text-white/70">Secure transactions</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 bg-purple-500/20 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <span class="text-white/70">24/7 customer support</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Sign Up Form -->
  <div class="w-full lg:w-1/2 flex items-center justify-center p-6 lg:p-12 relative z-10">
    <div class="w-full max-w-md">
      <!-- Mobile Logo -->
      <div class="lg:hidden flex items-center justify-center gap-3 mb-8">
        <div class="w-10 h-10 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center">
          <span class="text-black font-black text-xl">N</span>
        </div>
        <span class="font-bold text-xl text-white">NaijaRent</span>
      </div>

      <!-- Form Card -->
      <div class="bg-white/[0.03] backdrop-blur-xl rounded-3xl border border-white/10 p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-white mb-2">Create your account</h2>
          <p class="text-white/50">Join thousands finding their perfect home</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          
          <% if resource.errors.any? %>
            <div class="px-4 py-3 bg-red-500/10 border border-red-500/20 rounded-xl">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="text-sm text-red-400">
                  <% resource.errors.full_messages.each do |message| %>
                    <p><%= message %></p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Name Fields -->
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium text-white/70">First name</label>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name",
                  class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "John" %>
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-white/70">Last name</label>
              <%= f.text_field :last_name, autocomplete: "family-name",
                  class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "Doe" %>
            </div>
          </div>

          <!-- Email Field -->
          <div class="space-y-2">
            <label class="text-sm font-medium text-white/70">Email address</label>
            <div class="relative">
              <div class="absolute left-4 top-1/2 -translate-y-1/2">
                <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <%= f.email_field :email, autocomplete: "email",
                  class: "w-full pl-12 pr-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "john@example.com" %>
            </div>
          </div>

          <!-- Phone Field -->
          <div class="space-y-2">
            <label class="text-sm font-medium text-white/70">Phone number</label>
            <div class="relative">
              <div class="absolute left-4 top-1/2 -translate-y-1/2">
                <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <%= f.text_field :phone_number, autocomplete: "tel",
                  class: "w-full pl-12 pr-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "+234 803 123 4567" %>
            </div>
          </div>

          <!-- Role Selection -->
          <div class="space-y-2">
            <label class="text-sm font-medium text-white/70">I am a...</label>
            <div class="grid grid-cols-3 gap-2">
              <% [['Tenant', 'tenant'], ['Landlord', 'landlord'], ['Agent', 'agent']].each do |label, value| %>
                <label class="relative cursor-pointer">
                  <input type="radio" name="user[role]" value="<%= value %>" class="sr-only peer" <%= 'checked' if value == 'tenant' %>>
                  <div class="px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-center text-sm font-medium text-white/60 transition-all peer-checked:bg-amber-500/20 peer-checked:border-amber-500/50 peer-checked:text-amber-400 hover:bg-white/10">
                    <%= label %>
                  </div>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Company Field (for agents) -->
          <div id="company_field" class="hidden space-y-2">
            <label class="text-sm font-medium text-white/70">Company name</label>
            <%= f.text_field :company_name,
                class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                placeholder: "Your Agency Ltd" %>
          </div>

          <!-- Password Fields -->
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium text-white/70">Password</label>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "••••••••" %>
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-white/70">Confirm</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all text-sm",
                  placeholder: "••••••••" %>
            </div>
          </div>

          <!-- Terms -->
          <label class="flex items-start gap-3 cursor-pointer">
            <input type="checkbox" name="terms" required class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-amber-500 focus:ring-amber-500/50">
            <span class="text-sm text-white/50">
              I agree to the <a href="#" class="text-amber-400 hover:text-amber-300">Terms of Service</a> and <a href="#" class="text-amber-400 hover:text-amber-300">Privacy Policy</a>
            </span>
          </label>

          <!-- Submit Button -->
          <%= f.submit "Create Account", class: "w-full py-4 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-black font-bold rounded-xl transition-all duration-300 hover:shadow-[0_0_30px_rgba(251,191,36,0.4)] cursor-pointer" %>
        <% end %>

        <!-- Sign In Link -->
        <p class="text-center text-white/50 mt-6">
          Already have an account? 
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-amber-400 hover:text-amber-300 font-medium transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  // Show/hide company field based on role
  document.querySelectorAll('input[name="user[role]"]').forEach(radio => {
    radio.addEventListener('change', function() {
      const companyField = document.getElementById('company_field');
      if (this.value === 'agent') {
        companyField.classList.remove('hidden');
      } else {
        companyField.classList.add('hidden');
      }
    });
  });
</script>
