<!-- Sign Up - NaijaRent Green Theme -->
<div class="min-h-screen bg-gray-50 flex">
  <!-- Left: Branding Panel -->
  <div class="hidden lg:flex lg:w-1/2 bg-[#0D0D0D] relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(rgba(0,135,81,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(0,135,81,0.05)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
      <div class="absolute top-1/4 -left-20 w-80 h-80 bg-[#008751]/20 rounded-full blur-[100px]"></div>
      <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-[#E85D04]/10 rounded-full blur-[80px]"></div>
    </div>
    
    <div class="relative z-10 flex flex-col justify-center px-16">
      <%= link_to root_path, class: "flex items-center gap-3 mb-12" do %>
        <div class="w-12 h-12 bg-[#008751] rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <span class="text-2xl font-bold text-white">NaijaRent</span>
      <% end %>

      <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight mb-6">
        Join Nigeria's<br>
        <span class="text-[#008751]">#1 Rental Platform</span>
      </h1>
      <p class="text-xl text-white/60 mb-12 max-w-md">Whether you're looking for a home or listing properties, NaijaRent has you covered.</p>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-6">
        <div class="p-4 bg-white/5 rounded-xl border border-white/10">
          <p class="text-2xl font-bold text-white">5K+</p>
          <p class="text-xs text-white/50">Properties</p>
        </div>
        <div class="p-4 bg-white/5 rounded-xl border border-white/10">
          <p class="text-2xl font-bold text-white">2.5K+</p>
          <p class="text-xs text-white/50">Users</p>
        </div>
        <div class="p-4 bg-white/5 rounded-xl border border-white/10">
          <p class="text-2xl font-bold text-[#008751]">36</p>
          <p class="text-xs text-white/50">States</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Right: Form Panel -->
  <div class="flex-1 flex items-center justify-center px-6 py-12 overflow-y-auto">
    <div class="w-full max-w-md">
      <!-- Mobile Logo -->
      <div class="lg:hidden mb-8 text-center">
        <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
          <div class="w-10 h-10 bg-[#008751] rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-[#0D0D0D]">NaijaRent</span>
        <% end %>
      </div>

      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-[#0D0D0D] mb-2">Create Account</h2>
        <p class="text-gray-500">Get started for free</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="p-4 bg-red-50 border border-red-100 rounded-xl">
            <p class="text-sm text-red-700 font-medium mb-2">Please fix the following errors:</p>
            <ul class="text-sm text-red-600 list-disc list-inside space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Role Selection -->
        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-3">I am a...</label>
          <div class="grid grid-cols-3 gap-3">
            <label class="relative cursor-pointer">
              <%= f.radio_button :role, 'tenant', class: "peer sr-only" %>
              <div class="p-4 bg-white border-2 border-gray-200 rounded-xl text-center peer-checked:border-[#008751] peer-checked:bg-[#008751]/5 transition-all">
                <div class="text-2xl mb-1">üè†</div>
                <p class="font-semibold text-sm text-[#0D0D0D]">Tenant</p>
                <p class="text-xs text-gray-500">Looking for home</p>
              </div>
            </label>
            <label class="relative cursor-pointer">
              <%= f.radio_button :role, 'landlord', class: "peer sr-only" %>
              <div class="p-4 bg-white border-2 border-gray-200 rounded-xl text-center peer-checked:border-[#008751] peer-checked:bg-[#008751]/5 transition-all">
                <div class="text-2xl mb-1">üîë</div>
                <p class="font-semibold text-sm text-[#0D0D0D]">Landlord</p>
                <p class="text-xs text-gray-500">Property owner</p>
              </div>
            </label>
            <label class="relative cursor-pointer">
              <%= f.radio_button :role, 'agent', class: "peer sr-only" %>
              <div class="p-4 bg-white border-2 border-gray-200 rounded-xl text-center peer-checked:border-[#008751] peer-checked:bg-[#008751]/5 transition-all">
                <div class="text-2xl mb-1">üíº</div>
                <p class="font-semibold text-sm text-[#0D0D0D]">Agent</p>
                <p class="text-xs text-gray-500">Real estate agent</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Name Fields -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">First Name</label>
            <%= f.text_field :first_name, placeholder: "John", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
          </div>
          <div>
            <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Last Name</label>
            <%= f.text_field :last_name, placeholder: "Doe", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Phone Number</label>
          <%= f.text_field :phone_number, placeholder: "+234 803 123 4567", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Password</label>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Min. 6 characters", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Confirm Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <%= f.submit "Create Account", class: "w-full py-4 bg-[#008751] text-white font-bold rounded-xl hover:bg-[#006B40] transition-all duration-300 cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-center text-gray-500 text-sm">
        By signing up, you agree to our
        <a href="#" class="text-[#008751] font-medium hover:text-[#006B40]">Terms</a> &
        <a href="#" class="text-[#008751] font-medium hover:text-[#006B40]">Privacy Policy</a>
      </p>

      <p class="mt-4 text-center text-gray-500">
        Already have an account?
        <%= link_to "Sign in", new_user_session_path, class: "text-[#008751] font-semibold hover:text-[#006B40]" %>
      </p>
    </div>
  </div>
</div>
