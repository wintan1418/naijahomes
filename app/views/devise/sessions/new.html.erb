<!-- Sign In Page - NaijaRent Premium -->
<div class="min-h-screen bg-[#0A0A0A] flex relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 right-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-amber-500/10 to-orange-600/5 blur-[100px]"></div>
    <div class="absolute bottom-1/4 left-1/4 w-[400px] h-[400px] rounded-full bg-gradient-to-br from-emerald-600/10 to-teal-500/5 blur-[80px]"></div>
  </div>

  <!-- Left Side - Branding (Hidden on mobile) -->
  <div class="hidden lg:flex lg:w-1/2 relative items-center justify-center p-12">
    <div class="relative z-10 max-w-lg">
      <!-- Logo -->
      <div class="flex items-center gap-3 mb-12">
        <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/25">
          <span class="text-black font-black text-2xl">N</span>
        </div>
        <span class="font-bold text-2xl text-white">NaijaRent</span>
      </div>

      <h1 class="text-5xl font-black text-white leading-tight mb-6">
        Welcome back to
        <span class="bg-gradient-to-r from-amber-400 to-orange-500 bg-clip-text text-transparent">NaijaRent</span>
      </h1>
      
      <p class="text-xl text-white/60 mb-12 leading-relaxed">
        Continue your journey to finding the perfect home in Nigeria. Over 10,000+ verified properties waiting for you.
      </p>

      <!-- Trust Indicators -->
      <div class="flex items-center gap-8">
        <div class="flex -space-x-3">
          <% 4.times do |i| %>
            <div class="w-10 h-10 rounded-full border-2 border-[#0A0A0A] bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-xs font-bold text-black">
              <%= ['O', 'A', 'C', 'N'][i] %>
            </div>
          <% end %>
        </div>
        <div class="text-sm text-white/60">
          <span class="text-white font-semibold">2,500+</span> happy users this month
        </div>
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute bottom-12 left-12 right-12">
      <div class="grid grid-cols-3 gap-4 opacity-20">
        <% 6.times do %>
          <div class="h-2 bg-white/20 rounded-full"></div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right Side - Sign In Form -->
  <div class="w-full lg:w-1/2 flex items-center justify-center p-6 lg:p-12 relative z-10">
    <div class="w-full max-w-md">
      <!-- Mobile Logo -->
      <div class="lg:hidden flex items-center justify-center gap-3 mb-8">
        <div class="w-10 h-10 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center">
          <span class="text-black font-black text-xl">N</span>
        </div>
        <span class="font-bold text-xl text-white">NaijaRent</span>
      </div>

      <!-- Form Card -->
      <div class="bg-white/[0.03] backdrop-blur-xl rounded-3xl border border-white/10 p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-white mb-2">Sign in to your account</h2>
          <p class="text-white/50">Enter your credentials to continue</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
          
          <% if flash[:alert] %>
            <div class="flex items-center gap-3 px-4 py-3 bg-red-500/10 border border-red-500/20 rounded-xl">
              <svg class="w-5 h-5 text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-red-400"><%= flash[:alert] %></span>
            </div>
          <% end %>

          <% if flash[:notice] %>
            <div class="flex items-center gap-3 px-4 py-3 bg-emerald-500/10 border border-emerald-500/20 rounded-xl">
              <svg class="w-5 h-5 text-emerald-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm text-emerald-400"><%= flash[:notice] %></span>
            </div>
          <% end %>

          <!-- Email Field -->
          <div class="space-y-2">
            <label class="text-sm font-medium text-white/70">Email address</label>
            <div class="relative">
              <div class="absolute left-4 top-1/2 -translate-y-1/2">
                <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "w-full pl-12 pr-4 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all",
                  placeholder: "Enter your email" %>
            </div>
          </div>

          <!-- Password Field -->
          <div class="space-y-2">
            <label class="text-sm font-medium text-white/70">Password</label>
            <div class="relative">
              <div class="absolute left-4 top-1/2 -translate-y-1/2">
                <svg class="w-5 h-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "current-password",
                  class: "w-full pl-12 pr-12 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-amber-500/50 focus:bg-white/10 transition-all",
                  placeholder: "Enter your password",
                  id: "password-field" %>
              <button type="button" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/40 hover:text-white/60 transition-colors" onclick="togglePassword()">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="password-icon">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Remember & Forgot -->
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="flex items-center gap-2 cursor-pointer">
                <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-white/20 bg-white/5 text-amber-500 focus:ring-amber-500/50" %>
                <span class="text-sm text-white/60">Remember me</span>
              </label>
            <% end %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-amber-400 hover:text-amber-300 transition-colors" %>
          </div>

          <!-- Submit Button -->
          <%= f.submit "Sign in", class: "w-full py-4 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-black font-bold rounded-xl transition-all duration-300 hover:shadow-[0_0_30px_rgba(251,191,36,0.4)] cursor-pointer" %>
        <% end %>

        <!-- Divider -->
        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/10"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="px-4 bg-[#0A0A0A] text-white/40 text-sm">or continue with</span>
          </div>
        </div>

        <!-- Social Login -->
        <div class="grid grid-cols-2 gap-4">
          <button type="button" class="flex items-center justify-center gap-2 px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white/80 hover:bg-white/10 transition-all">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            <span class="text-sm font-medium">Google</span>
          </button>
          <button type="button" class="flex items-center justify-center gap-2 px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white/80 hover:bg-white/10 transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <span class="text-sm font-medium">Facebook</span>
          </button>
        </div>

        <!-- Sign Up Link -->
        <p class="text-center text-white/50 mt-8">
          Don't have an account? 
          <%= link_to "Create one", new_registration_path(resource_name), class: "text-amber-400 hover:text-amber-300 font-medium transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  function togglePassword() {
    const field = document.getElementById('password-field');
    const icon = document.getElementById('password-icon');
    
    if (field.type === 'password') {
      field.type = 'text';
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>';
    } else {
      field.type = 'password';
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>';
    }
  }
</script>
