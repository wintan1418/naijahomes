<!-- Sign In - NaijaRent Green Theme -->
<div class="min-h-screen bg-gray-50 flex">
  <!-- Left: Branding Panel -->
  <div class="hidden lg:flex lg:w-1/2 bg-[#0D0D0D] relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(rgba(0,135,81,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(0,135,81,0.05)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
      <div class="absolute top-1/4 -left-20 w-80 h-80 bg-[#008751]/20 rounded-full blur-[100px]"></div>
      <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-[#008751]/10 rounded-full blur-[100px]"></div>
    </div>
    
    <div class="relative z-10 flex flex-col justify-center px-16">
      <%= link_to root_path, class: "flex items-center gap-3 mb-12" do %>
        <div class="w-12 h-12 bg-[#008751] rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <span class="text-2xl font-bold text-white">NaijaRent</span>
      <% end %>

      <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight mb-6">
        Welcome Back<br>
        <span class="text-[#008751]">To NaijaRent</span>
      </h1>
      <p class="text-xl text-white/60 mb-12 max-w-md">Sign in to manage your properties, track leads, and connect with tenants across Nigeria.</p>

      <div class="space-y-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-[#008751]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="font-semibold text-white">Verified Properties</p>
            <p class="text-sm text-white/50">All listings verified by our team</p>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-[#008751]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div>
            <p class="font-semibold text-white">Instant Connections</p>
            <p class="text-sm text-white/50">Connect via WhatsApp or in-app</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right: Form Panel -->
  <div class="flex-1 flex items-center justify-center px-6 py-12">
    <div class="w-full max-w-md">
      <!-- Mobile Logo -->
      <div class="lg:hidden mb-8 text-center">
        <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
          <div class="w-10 h-10 bg-[#008751] rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-[#0D0D0D]">NaijaRent</span>
        <% end %>
      </div>

      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-[#0D0D0D] mb-2">Sign In</h2>
        <p class="text-gray-500">Enter your credentials to continue</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <% if flash[:alert] %>
          <div class="p-4 bg-red-50 border border-red-100 rounded-xl flex items-center gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm text-red-700"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <div>
          <label class="block text-sm font-semibold text-[#0D0D0D] mb-2">Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <div>
          <div class="flex items-center justify-between mb-2">
            <label class="block text-sm font-semibold text-[#0D0D0D]">Password</label>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-[#008751] hover:text-[#006B40] font-medium" %>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "w-full px-4 py-3.5 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-[#008751]/20 focus:border-[#008751] transition-all" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-3">
            <%= f.check_box :remember_me, class: "w-5 h-5 rounded border-gray-300 text-[#008751] focus:ring-[#008751]" %>
            <%= f.label :remember_me, "Remember me", class: "text-sm text-gray-600" %>
          </div>
        <% end %>

        <%= f.submit "Sign In", class: "w-full py-4 bg-[#008751] text-white font-bold rounded-xl hover:bg-[#006B40] transition-all duration-300 cursor-pointer" %>
      <% end %>

      <p class="mt-8 text-center text-gray-500">
        Don't have an account?
        <%= link_to "Create one", new_user_registration_path, class: "text-[#008751] font-semibold hover:text-[#006B40]" %>
      </p>
    </div>
  </div>
</div>
