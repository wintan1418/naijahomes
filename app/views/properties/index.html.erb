<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-emerald-600 via-teal-600 to-cyan-600 overflow-hidden">
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="absolute inset-0">
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 animate-fade-in">
      Find Your Perfect Home
    </h1>
    <p class="text-xl md:text-2xl text-white/90 max-w-2xl animate-fade-in-delay">
      Discover premium properties across all Nigerian states with our curated collection
    </p>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-8 mt-12 max-w-xl">
      <div class="text-center animate-fade-in-delay-2">
        <div class="text-3xl font-bold text-white"><%= Property.available.count %></div>
        <div class="text-sm text-white/70">Active Listings</div>
      </div>
      <div class="text-center animate-fade-in-delay-3">
        <div class="text-3xl font-bold text-white">36</div>
        <div class="text-sm text-white/70">States Covered</div>
      </div>
      <div class="text-center animate-fade-in-delay-4">
        <div class="text-3xl font-bold text-white"><%= User.count %></div>
        <div class="text-sm text-white/70">Happy Users</div>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:flex lg:gap-8">
      
      <!-- Premium Filters Sidebar -->
      <aside class="lg:w-80 mb-8 lg:mb-0">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 sticky top-24">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Filters</h2>
            <button class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">Clear All</button>
          </div>
          
          <%= form_with url: properties_path, method: :get, local: true, class: "space-y-6" do |f| %>
            <!-- State Filter -->
            <div class="group">
              <%= f.label :state, class: "block text-sm font-semibold text-gray-900 mb-3" %>
              <div class="relative">
                <%= f.select :state, 
                            options_for_select([["All States", ""]] + Property::NIGERIAN_STATES.map{|s| [s, s]}, params[:state]), 
                            {}, 
                            class: "w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200 appearance-none cursor-pointer hover:bg-gray-100" %>
                <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- City Filter -->
            <div class="group">
              <%= f.label :city, class: "block text-sm font-semibold text-gray-900 mb-3" %>
              <div class="relative">
                <div class="absolute left-3 top-1/2 -translate-y-1/2 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <%= f.text_field :city, 
                                value: params[:city], 
                                class: "w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200 hover:bg-gray-100",
                                placeholder: "Enter city name" %>
              </div>
            </div>
            
            <!-- Property Type Filter -->
            <div class="group">
              <%= f.label :property_type, class: "block text-sm font-semibold text-gray-900 mb-3" %>
              <div class="grid grid-cols-2 gap-3">
                <% Property.property_types.each do |key, value| %>
                  <label class="relative">
                    <input type="radio" name="property_type" value="<%= key %>" 
                           <%= 'checked' if params[:property_type] == key %>
                           class="sr-only peer">
                    <div class="px-4 py-2.5 bg-gray-50 rounded-lg cursor-pointer text-center text-sm font-medium text-gray-700 border-2 border-gray-200 transition-all duration-200 peer-checked:bg-emerald-50 peer-checked:text-emerald-700 peer-checked:border-emerald-500 hover:bg-gray-100">
                      <%= key.humanize %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>
            
            <!-- Price Range -->
            <div class="group">
              <label class="block text-sm font-semibold text-gray-900 mb-3">Price Range (₦)</label>
              <div class="space-y-3">
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">₦</span>
                  <%= f.number_field :min_price, 
                                    value: params[:min_price], 
                                    placeholder: "Minimum",
                                    class: "w-full pl-8 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200 hover:bg-gray-100" %>
                </div>
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">₦</span>
                  <%= f.number_field :max_price, 
                                    value: params[:max_price], 
                                    placeholder: "Maximum",
                                    class: "w-full pl-8 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
            
            <!-- Bedrooms Filter -->
            <div class="group">
              <%= f.label :bedrooms, class: "block text-sm font-semibold text-gray-900 mb-3" %>
              <div class="flex flex-wrap gap-2">
                <% [["Any", ""], ["Studio", 0], ["1", 1], ["2", 2], ["3", 3], ["4+", 4]].each do |label, value| %>
                  <label class="relative">
                    <input type="radio" name="bedrooms" value="<%= value %>" 
                           <%= 'checked' if params[:bedrooms].to_s == value.to_s %>
                           class="sr-only peer">
                    <div class="px-4 py-2 bg-gray-50 rounded-lg cursor-pointer text-sm font-medium text-gray-700 border-2 border-gray-200 transition-all duration-200 peer-checked:bg-emerald-50 peer-checked:text-emerald-700 peer-checked:border-emerald-500 hover:bg-gray-100">
                      <%= label %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>
            
            <div class="pt-4">
              <%= f.submit "Apply Filters", class: "w-full bg-gradient-to-r from-emerald-500 to-teal-600 text-white py-3 px-6 rounded-xl font-semibold hover:from-emerald-600 hover:to-teal-700 transition-all duration-200 transform hover:-translate-y-0.5 hover:shadow-lg" %>
            </div>
          <% end %>
        </div>
      </aside>
      
      <!-- Properties Grid -->
      <div class="lg:flex-1">
        <!-- Results Header -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-1">
              Available Properties
            </h2>
            <p class="text-gray-500">
              <span class="font-medium text-gray-900"><%= @properties.total_count %></span> properties found
            </p>
          </div>
          
          <div class="flex items-center gap-4 mt-4 md:mt-0">
            <!-- Sort Dropdown -->
            <div class="relative">
              <select class="px-4 py-2 bg-white border border-gray-200 rounded-xl text-sm font-medium text-gray-700 appearance-none pr-10 cursor-pointer hover:bg-gray-50 transition-colors">
                <option>Most Recent</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
                <option>Most Popular</option>
              </select>
              <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </div>
            
            <!-- View Toggle -->
            <div class="flex items-center bg-gray-100 rounded-lg p-1">
              <button class="p-2 bg-white rounded-md shadow-sm">
                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
              </button>
              <button class="p-2 text-gray-500 hover:bg-gray-200 rounded-md transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
        
        <% if @properties.any? %>
          <div class="grid md:grid-cols-2 gap-6">
            <% @properties.each do |property| %>
              <%= link_to property_path(property), class: "group" do %>
                <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 transform hover:-translate-y-1">
                  <!-- Property Image -->
                  <div class="relative h-64 bg-gradient-to-br from-gray-100 to-gray-200 overflow-hidden">
                    <% if property.images.attached? && property.images.first %>
                      <%= image_tag property.images.first, class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                    <% else %>
                      <div class="flex items-center justify-center h-full">
                        <svg class="h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                      </div>
                    <% end %>
                    
                    <!-- Overlay Gradient -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    
                    <!-- Badges -->
                    <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                      <% if property.featured? %>
                        <span class="px-3 py-1.5 bg-yellow-500 text-white text-xs font-semibold rounded-full shadow-lg">
                          Featured
                        </span>
                      <% end %>
                      <span class="px-3 py-1.5 bg-white/90 backdrop-blur-sm text-gray-700 text-xs font-semibold rounded-full shadow-lg">
                        <%= property.property_type.humanize %>
                      </span>
                    </div>
                    
                    <!-- Status Badge -->
                    <div class="absolute top-4 right-4">
                      <span class="px-3 py-1.5 bg-emerald-500 text-white text-xs font-semibold rounded-full shadow-lg">
                        <%= property.status.humanize %>
                      </span>
                    </div>
                    
                    <!-- Favorite Button -->
                    <button class="absolute bottom-4 right-4 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg hover:bg-white transition-colors opacity-0 group-hover:opacity-100 transform translate-y-2 group-hover:translate-y-0 duration-300" onclick="event.preventDefault();">
                      <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                      </svg>
                    </button>
                  </div>
                  
                  <!-- Property Details -->
                  <div class="p-6">
                    <!-- Price -->
                    <div class="flex items-baseline justify-between mb-3">
                      <div>
                        <span class="text-3xl font-bold text-gray-900"><%= property.price_display %></span>
                        <span class="text-sm text-gray-500 ml-1">/<%= property.payment_text.downcase %></span>
                      </div>
                      <% if property.negotiable? %>
                        <span class="px-2 py-1 bg-emerald-100 text-emerald-700 text-xs font-medium rounded-full">
                          Negotiable
                        </span>
                      <% end %>
                    </div>
                    
                    <!-- Title -->
                    <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-1 group-hover:text-emerald-600 transition-colors">
                      <%= property.title %>
                    </h3>
                    
                    <!-- Location -->
                    <div class="flex items-center text-gray-600 mb-4">
                      <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <span class="text-sm"><%= property.location_text %></span>
                    </div>
                    
                    <!-- Features -->
                    <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
                      <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        <span class="text-sm font-medium"><%= property.bedroom_text %></span>
                      </div>
                      
                      <% if property.bathrooms.present? %>
                        <div class="flex items-center text-gray-600">
                          <svg class="w-5 h-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2v1m0 18v1m9-10h1M2 12h1m15.364 6.364l.707.707M5.929 5.929l.707.707m11.435 0l.707-.707M5.929 18.071l.707-.707M12 8a4 4 0 100 8 4 4 0 000-8z"></path>
                          </svg>
                          <span class="text-sm font-medium"><%= pluralize(property.bathrooms, 'Bath') %></span>
                        </div>
                      <% end %>
                      
                      <% if property.parking_spaces.present? && property.parking_spaces > 0 %>
                        <div class="flex items-center text-gray-600">
                          <svg class="w-5 h-5 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h8m0 0a2 2 0 012 2v1M8 7a2 2 0 00-2 2v1m0 0h12m-6 4h.01M6 16h12a2 2 0 002-2V9"></path>
                          </svg>
                          <span class="text-sm font-medium"><%= property.parking_spaces %> Parking</span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <!-- Pagination -->
          <div class="mt-12 flex justify-center">
            <%= paginate @properties %>
          </div>
        <% else %>
          <!-- No Results -->
          <div class="bg-white rounded-2xl shadow-lg p-16 text-center">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">No properties found</h3>
            <p class="text-gray-600 mb-6 max-w-md mx-auto">
              We couldn't find any properties matching your criteria. Try adjusting your filters or search in different areas.
            </p>
            <button onclick="window.location.reload()" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 text-white font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-700 transition-all duration-200 transform hover:-translate-y-0.5 hover:shadow-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Reset Filters
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }
  
  .animate-fade-in-delay {
    animation: fade-in 0.6s ease-out 0.1s both;
  }
  
  .animate-fade-in-delay-2 {
    animation: fade-in 0.6s ease-out 0.2s both;
  }
  
  .animate-fade-in-delay-3 {
    animation: fade-in 0.6s ease-out 0.3s both;
  }
  
  .animate-fade-in-delay-4 {
    animation: fade-in 0.6s ease-out 0.4s both;
  }
</style>